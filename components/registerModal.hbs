<div class="modal fade" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content register">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Sign up</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-4">
				 <form action="/registerUser" method="post" onsubmit="document.getElementById('hiddenURL').value = window.location.href">
					<div class="row content">
						<div class="col-sm-4"><label for="username">User Name: </label></div>
						<div class="col-sm-5"><input type="text" id="username" name="username"></div>
						<div class="col-sm-2 error">username taken</div>
					</div>
                </div>
              
				<div class="md-form mb-4">             
					<div class="row content">
						<div class="col-sm-4"><label for="email"> Email:  </label></div>
						<div class="col-sm-5"><input type="text" id="email" name="email"></div>
						<div class="col-sm-2 error">email taken</div>
					</div>
                </div>

                <div class="md-form mb-4">               
                    <div class="row content">
						<div class="col-sm-4"><label for="password">Password:  </label></div>
						<div class="col-sm-5"><input type="password" id="password" name="password"></div>
						<div class="col-sm-2 error">password strength</div>
					</div>
                </div>
				 
				<div class="md-form mb-4">                
                   	<div class="row content">
						<div class="col-sm-4"><label for="confirmPassword">Confirm Password:  </label></div>
						<div class="col-sm-5"><input type="password" id="confirmPassword" name="confirmPassword"></div>
						<div class="col-sm-2 error">passwords don't match</div>
					</div>
                </div>
				<div class="modal-footer d-flex justify-content-center" style="border:none;">
                <input type="submit" value="Sign up"/> {{#if_eq Login 'failed'}} <div>login failed!</div>{{/if_eq}}
            </div>
			</form>
            </div>
           
        </div>
    </div>
</div>
